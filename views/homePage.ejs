<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Attendance System</title>

  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body class="bg-gray-100 min-h-screen flex items-center justify-center">

  <!-- Main Wrapper -->
  <div class="w-full max-w-5xl grid grid-cols-1 md:grid-cols-2 gap-8 p-6">

    <!-- Left Panel: Actions -->
    <div class="bg-white shadow-lg rounded-xl p-8 text-center">
      <h1 class="text-3xl font-bold text-gray-800 mb-8">
        Attendance System
      </h1>

      <!-- Add Section -->
      <div class="flex flex-col gap-4 mb-6">
        <a href="/students/add"
           class="px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition">
          Add Student
        </a>

        <a href="/teachers/add"
           class="px-6 py-3 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition">
          Add Teacher
        </a>
      </div>

      <!-- View Section -->
      <div class="flex flex-col gap-4">
        <a href="/studentsPage"
           class="px-6 py-3 bg-yellow-600 text-white font-semibold rounded-lg hover:bg-yellow-700 transition">
          See Students
        </a>

        <a href="/teachersPage"
           class="px-6 py-3 bg-purple-600 text-white font-semibold rounded-lg hover:bg-purple-700 transition">
          See Teachers
        </a>
      </div>
    </div>

    <!-- Right Panel: Dashboard -->
    <div class="bg-white shadow-lg rounded-xl p-8">
      <h2 class="text-3xl font-bold text-center mb-6">
        No of students and teachers present
      </h2>

      <canvas id="donutChart"></canvas>

      <div class="flex justify-between mt-6 font-semibold text-gray-700">
        <span>Students: <%= studentCount %></span>
        <span>Teachers: <%= teacherCount %></span>
      </div>
    </div>

  </div>

  <!-- Chart Script -->
  <script>
    const studentCount = <%- JSON.stringify(studentCount) %>;
    const teacherCount = <%- JSON.stringify(teacherCount) %>;

    const ctx = document.getElementById('donutChart');

    new Chart(ctx, {
      type: 'doughnut',
      data: {
        labels: ['Students', 'Teachers'],
        datasets: [{
          data: [studentCount, teacherCount],
          backgroundColor: ['#2563eb', '#16a34a'],
          borderWidth: 1
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: {
            position: 'bottom'
          }
        }
      }
    });
  </script>

</body>
</html>
